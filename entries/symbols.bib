# Reference Frames

@symbol{frI,
    name = {\ensuremath{\mathcal{I}}},
    description = {inertial reference frame (fixed, stationary)},
    identifier = {referenceFrames}
}

@symbol{frI_origin,
    name = {\ensuremath{I}},
    description = {origin of \gls{frI}},
    identifier = {referenceFrames}
}

@symbol{frW,
    name = {\ensuremath{\mathcal{W}}},
    description = {world reference frame (inertial)},
    identifier = {referenceFrames}
}

Frame transformation

@symbol{matPsvRot,
    name = {\ensuremath{\bm{R}}},
    description = {passive rotation matrix (\glsxtrshort{dcm})},
    identifier = {frameTransformation}
}

@symbol{vecTransl,
    name = {\ensuremath{\bm{t}}},
    description = {translation vector},
    identifier = {frameTransformation}
}

@symbol{matHomTransf,
    name = {\ensuremath{\bm{T}}},
    description = {homogeneous transformation matrix},
    identifier = {frameTransformation}
}

@symbol{vecBasis,
    name = {\ensuremath{\bm{e}}},
    description = {basis vector of the $x,y$ or $z$ axis of a Cartesian coordinate system},
    identifier = {frameTransformation}
}